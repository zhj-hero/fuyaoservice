.seat-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-body {
  padding: 30rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-label {
  width: 150rpx;
  color: #999;
}

.detail-value {
  flex: 1;
}

.modal-footer {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  border-radius: 8rpx;
}

.btn-cancel {
  background-color:#E0E0E0;
  color: #333;
}

.btn-book {
  background-color: #07c160;
  color: #fff;
}

.btn-manage {
  background-color: #1989fa;
  color: #fff;
}

.available {
  color: #07c160;
  font-weight: bold;
}

.reserved {
  color: #ff976a;
  font-weight: bold;
}

.occupied {
  color: #ee0a24;
  font-weight: bold;
}