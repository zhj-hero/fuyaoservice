/* components/notice-modal/notice-modal.wxss */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-content-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

.modal-time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: right;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  justify-content: flex-end;
}

.modal-btn {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 30rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn {
  background: #3A7FED;
  color: #fff;
}