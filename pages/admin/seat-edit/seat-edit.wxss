/* pages/admin/seat-edit/seat-edit.wxss */

.container {
    padding: 20px;
}

.form-item {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
    margin-bottom: 20px;
}

.label {
    display: block;
    font-size: 14px;
    color: #666;
    margin-bottom: 8px;
}

.input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    background-color: #f9f9f9;
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.input:focus {
    border-color: #07c160;
    background-color: #fff;
    box-shadow: 0 0 0 2px rgba(7, 193, 96, 0.1);
    outline: none;
}

.btn {
    background: #07c160;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 12px 0;
    width: 100%;
    font-size: 16px;
    text-align: center;
    margin-top: 20px;
    display: inline-block;
    transition: all 0.3s ease;
}

.btn:hover, .btn:active {
    opacity: 0.9;
    transform: scale(0.98);
}

.btn-primary {
    background: #07c160;
}

.btn-danger {
    background: #F44336;
}

.btn-default {
    background: #1890ff;
}

.picker {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #f9f9f9;
}


.button-hover {
    opacity: 0.9;
    transform: scale(0.98);
}


.button-group {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 15px;
    margin-top: 20px;
}

.button-group .btn {
    flex: 1;
    margin: 0;
    min-width: 0;
}