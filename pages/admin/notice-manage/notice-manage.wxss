/* pages/admin/notice-manage/notice-manage.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.notice-input {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

textarea {
  width: 100%;
  min-height: 50rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.notice-list {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.notice-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-buttons {
  display: flex;
  flex-direction: column-reverse;
  gap: 10rpx;
  font-size: 20rpx;
}

.notice-content {
  flex: 1;
}

.notice-time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.notice-content text {
  user-select: text;
  -webkit-user-select: text;
}