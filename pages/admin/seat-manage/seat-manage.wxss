/* pages/admin/seat-manage/seat-manage.wxss */

/* 容器样式 */
.container {
  padding: 30rpx 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh; /* 最小高度为整个视窗高度 */
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 头部文字样式 */
.header text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 座位列表容器 */
.seat-list {
  width: 100%;
}

/* 空列表样式 */
.empty-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 空列表文字样式 */
.empty-list text {
  color: #999;
  font-size: 30rpx;
}

/* 座位项样式 */
.seat-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  position: relative;
  border-left: 8rpx solid #3a86ff; /* 左侧蓝色边框 */
  transition: all 0.3s ease; /* 添加过渡动画 */
}

/* 座位项悬停效果 */
.seat-item:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  transform: translateY(-2rpx);
}

/* 座位信息容器 */
.seat-info {
  display: flex;
  margin-bottom: 12rpx;
}

/* 座位号样式 */
.seat-number {
  font-size: 42rpx;
  font-weight: bold;
  color:rgb(58, 134, 255);
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 70rpx;
}

/* 座位详情容器 */
.seat-detail {
  display: flex;
  flex-direction: column;
  flex: 1;
}

/* 座位详情文本样式 */
.seat-detail text {
  margin-bottom: 6rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

/* 值样式 */
.value {
  color: #333;
  font-weight: 500;
}

/* 状态标签基础样式 */
.status {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  width: fit-content;
}

/* 可用状态样式 */
.available {
  background-color: #e6f7ff;
  color: #1890ff;
}

/* 不可用状态样式 */
.unavailable {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 座位操作按钮容器 */
.seat-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 20rpx;
  margin-top: -20rpx;
}

/* 统一按钮样式 */
button[size="mini"] {
  margin: 0;
  padding: 0 20rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
}

/* 主要按钮样式 */
button[type="primary"] {
  background-color: #3a86ff;
}

/* 小型主要按钮样式 */
button[type="primary"][size="mini"] {
  background-color: #3a86ff;
  color: #fff;
  font-weight: normal;
}

/* 小型警告按钮样式 */
button[type="warn"][size="mini"] {
  background-color: #ff4d4f;
  color: #fff;
  font-weight: normal;
}

/* 添加座位按钮样式 */
.add-btn {
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 204, 113, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #2ecc71 !important;
  color:rgb(19, 2, 2) !important;
  border: none;
  font-weight: bold;
  transition: all 0.3s ease;
}

/* 添加座位按钮悬停效果 */
.add-btn:hover {
  background-color: #27ae60;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transform: translateY(-2rpx);
}

/* 按钮图标样式 */
.btn-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
  font-weight: bold;
  display: inline-block;
  line-height: 1;
}

/* 编辑按钮样式 */
.edit-btn {
  background-color:rgb(240, 240, 240);
  color: #666;
}

/* 删除按钮样式 */
.delete-btn {
  background-color: #ff4d4f;
}