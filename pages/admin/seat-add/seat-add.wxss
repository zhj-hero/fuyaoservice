/* pages/admin/seat-add/seat-add.wxss */

.container {
    padding: 20px;
}

.form-item {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
    margin-bottom: 20px;
}

.label {
    display: block;
    font-size: 14px;
    color: #666;
    margin-bottom: 8px;
}

.input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    background-color: #f9f9f9;
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.input:focus {
    border-color: #07c160;
    background-color: #fff;
    box-shadow: 0 0 0 2px rgba(7, 193, 96, 0.1);
    outline: none;
}

button {
    background: #07c160;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 12px 0;
    width: 100%;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    margin-top: 20px;
}


.picker {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #f9f9f9;
}

.button-hover {
  opacity: 0.9;
  transform: scale(0.98);
}