/* pages/admin/user-edit/user-edit.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.back-btn {
  font-size: 28rpx;
  color: #3A7FED;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: rgba(58, 127, 237, 0.1);
}

.user-edit-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-label {
  margin-right: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.btn-cancel {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #666;
  background-color: #f0f0f0;
}

.btn-submit {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #3A7FED;
}

.no-data {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}