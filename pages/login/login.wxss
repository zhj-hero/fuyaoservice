/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.logo-container {
  text-align: center;
  margin-bottom: 40px;
}

.logo {
  width: 120px;
  height: 120px;
  margin-bottom: 15px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.subtitle {
  font-size: 16px;
  color: #666;
}

.login-form {
  width: 80%;
}

.form-group {
  margin-bottom: 20px;
}

.form-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 15px;
  font-size: 16px;
  background: #fff;
}

.btn-primary {
  width: 100%;
  height: 44px;
  background: #1890ff;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  margin-top: 20px;
}

.login-options {
  margin-top: 20px;
  text-align: center;
}

.wechat-login {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 14px;
  margin-bottom: 15px;
  margin: 0 auto 15px 0;
}

.wechat-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.register-link {
  color: #1890ff;
  font-size: 14px;
}