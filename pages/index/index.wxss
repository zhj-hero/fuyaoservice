/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}



.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #3A7FED;
}




/* 轮播图样式 */
.banner {
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.banner swiper {
  height: 375rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 通知栏样式 */
.notice-bar {
  display: flex;
  align-items: center;
  background-color: #FFF8E1;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.notice-icon {
  margin-right: 16rpx;
}

.notice-icon image {
  width: 40rpx;
  height: 40rpx;
}

.notice-content {
  font-size: 26rpx;
  color: #FF9800;
  flex: 1;
}

/* 快捷操作区样式 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}

.action-item text {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.action-item:active {
  transform: scale(0.98);
}

.action-item image {
  width: 60rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.action-item .text {
  font-size: 26rpx;
  color: #333;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #3A7FED;
  border-radius: 4rpx;
}

/* 状态卡片样式 */
.status-card {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.status-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.text-success {
  color: #4CAF50;
}

.text-warning {
  color: #FF9800;
}

/* 通知列表样式 */
.notification-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.notification-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.notification-item:last-child {
  border-bottom: none;
}

.notification-item:active {
  background-color: #f9f9f9;
}

.notification-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.notification-content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}
  /*设置缺省查看样式*/
.notification-content.ellipsis {
  max-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.no-data {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 管理员入口按钮 */
.admin-entry {
  margin: 40rpx 0;
}

.btn-primary {
  background-color: #3A7FED;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(58, 127, 237, 0.3);
  border: none;
  transition: all 0.3s ease;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 弹窗样式 */
.wx-modal {
  font-size: 20rpx !important;
}

.wx-modal-title {
  font-size: 24rpx !important;
}

.wx-modal-content {
  font-size: 18rpx !important;
  color: #666;
  text-align: left;
}

.wx-modal-btn {
  font-size: 22rpx !important;
}


/* 悬浮客服按钮 */
.float-contact-btn {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: transparent;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  padding: 0;
  margin: 0;
  right: 0rpx;
  bottom: 200rpx;
}

.float-contact-btn image {
  width: 60rpx;
  height: 60rpx;
}

/* 透明客服按钮 */
.contact-button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1000;
  margin: 0;
  padding: 0;
  border: none;
  background: transparent;
}

.contact-button::after {
  border: none;
}
