/* pages/booking/booking.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 座位信息卡片 */
.seat-info-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.seat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.seat-status {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.seat-status.available {
  background-color: #4CAF50;
}

.seat-status.occupied {
  background-color: #F44336;
}

.seat-status.booked {
  background-color: #FFC107;
}

.seat-status.maintenance {
  background-color: #9E9E9E;
}

.card-body {
  padding-top: 10rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item .label {
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.info-item .value {
  color: #333;
  flex: 1;
}

/* 预订表单 */
.booking-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.form-group.half {
  width: 48%;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #F44336;
  margin-left: 10rpx;
}

.picker {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  width: 30rpx;
  height: 30rpx;
}

.form-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.form-textarea {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

/* 按钮区域 */
.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  width: 48%;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-submit {
  background-color: #3A7FED;
  color: #fff;
}