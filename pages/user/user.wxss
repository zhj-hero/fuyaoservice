/* pages/user/user.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 用户头像和信息 */
.user-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  flex-wrap: wrap;
}

@media screen and (max-width: 375px) {
  .user-header {
    padding: 20rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .username {
    font-size: 32rpx;
  }
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.user-basic-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-role {
  font-size: 28rpx;
  color: #3A7FED;
  background-color: rgba(58, 127, 237, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 标签页导航 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

@media screen and (max-width: 375px) {
  .tab-item {
    font-size: 28rpx;
    padding: 24rpx 0;
  }
}

.tab-item.active {
  color: #3A7FED;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #3A7FED;
  border-radius: 3rpx;
}

/* 标签页内容 */
.tab-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 预订列表 */
.booking-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.booking-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.booking-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.booking-status.pending {
  background-color: #FFC107;
}

.booking-status.approved {
  background-color: #4CAF50;
}

.booking-status.rejected {
  background-color: #F44336;
}

.booking-status.cancelled {
  background-color: #9E9E9E;
}

.booking-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-row .label {
  color: #666;
  width: 100rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #333;
  flex: 1;
}

.booking-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  transition: all 0.2s ease;
}

.btn-cancel:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.no-data {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 个人信息 */
.profile-card {
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
  border-radius: 12rpx;
  overflow: hidden;
}

.profile-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
}

.profile-item .label {
  width: 120rpx;
  color: #666;
  flex-shrink: 0;
}

.profile-item .value {
  flex: 1;
  color: #333;
}

.action-buttons {
  margin-top: 40rpx;
}

.action-buttons button {
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.btn-primary {
  background-color: #3A7FED;
  color: #fff;
  transition: all 0.2s ease;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-admin {
  background-color: #FF9800;
  color: #fff;
  transition: all 0.2s ease;
}

.btn-admin:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-logout {
  background-color: #f5f5f5;
  color: #666;
  transition: all 0.2s ease;
}

.btn-logout:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 用户管理部分 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.user-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

@media screen and (max-width: 375px) {
  .container {
    padding: 20rpx;
  }
  
  .tab-content {
    padding: 20rpx;
  }
  
  .booking-item {
    padding: 15rpx;
  }
}

button {
  margin-top: 10rpx;
}