/* pages/booking/booking.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}



/* 座位信息卡片 */
.seat-info-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.seat-info-title {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.change-seat {
  font-size: 26rpx;
  color: #3A7FED;
  padding: 10rpx 20rpx;
  border: 1rpx solid #3A7FED;
  border-radius: 30rpx;
}

.seat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 10rpx;
}

.seat-status {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
}

.seat-status.available {
  background-color: #4CAF50;
}


.card-body {
  padding-top: 10rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item .label {
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.info-item .value {
  color: #333;
  flex: 1;
}

/* 预订表单 */
.booking-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.form-group.half {
  width: 48%;
}

/* 日期选择器行样式 */
.date-picker-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.date-picker-row .form-group {
  width: 48%;
  margin-bottom: 0;
}

.date-picker-row .picker {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-picker-row .picker text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
  position: relative;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: inline;
}

.required {
  color: #F44336;
  margin-left: 4rpx;
  display: inline;
}

.picker {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  width: 30rpx;
  height: 30rpx;
}

.form-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.form-textarea {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
}

/* 按钮区域 */
.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  width: 48%;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.btn-cancel {
  background-color: #E0E0E0;
  color: #333;
}

.btn-submit {
  background-color: #4CAF50;
  color: #fff;
}

/* 价格显示样式 */
.price-display {
  display: flex;
  align-items: baseline;
  font-size: 36rpx;
  font-weight: ;
}

.price-symbol {
  color: #333;
  margin-right: 10rpx;
}

.price-amount {
  color: black;
}

/* 座位选择器弹窗 */
.seat-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.seat-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.seat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.seat-item:active {
  background-color: #f5f5f5;
}

.seat-info {
  display: flex;
  flex-direction: column;
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.seat-type {
  font-size: 26rpx;
  color: #666;
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}


/* 预订成功弹窗样式 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1001;
  display: flex;
  justify-content: center;
  align-items: center;
}

.success-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.success-modal-content {
  position: relative;
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.success-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.success-modal-message {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #666;
  line-height: 1.5;
}

.success-modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.success-modal-btn {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
}

.success-modal-btn.cancel {
  background-color: #E0E0E0;
  color: #333;
}

.success-modal-btn.confirm {
  background-color: #4CAF50;
  color: #fff;
}