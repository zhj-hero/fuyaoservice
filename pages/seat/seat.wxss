/* pages/seat/seat.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  position: relative;
  flex: 1;
  margin-right: 20rpx;
}

.search-box input {
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 60rpx 15rpx 30rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.filter-options {
  width: 180rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
}

.down-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

/* 座位地图样式 */
.seat-map-container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.seat-map-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.seat-map-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.seat-legend {
  display: flex;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.legend-color {
  width: 30rpx;
  height: 30rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.legend-color.available {
  background-color: #4CAF50;
}

.legend-color.occupied {
  background-color: #F44336;
}

.legend-color.booked {
  background-color: #FFC107;
}

.legend-color.maintenance {
  background-color: #9E9E9E;
}

.seat-map-scroll {
  width: 100%;
  overflow-x: auto;
}

.seat-map {
  padding: 20rpx 0;
  min-width: 100%;
}

.seat-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.row-label {
  width: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.seat-col {
  margin: 0 10rpx;
}

.seat {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #fff;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.seat.available {
  background-color: #4CAF50;
}

.seat.occupied {
  background-color: #F44336;
}

.seat.booked {
  background-color: #FFC107;
}

.seat.maintenance {
  background-color: #9E9E9E;
}

/* 座位列表样式 */
.seat-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.seat-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.seat-info {
  display: flex;
  align-items: center;
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.seat-type {
  font-size: 28rpx;
  color: #666;
}

.seat-status {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.seat-status.available {
  background-color: #4CAF50;
}

.seat-status.occupied {
  background-color: #F44336;
}

.seat-status.booked {
  background-color: #FFC107;
}

.seat-status.maintenance {
  background-color: #9E9E9E;
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 添加座位按钮 */
.add-seat-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 10;
}

.btn-primary {
  background-color: #3A7FED;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(58, 127, 237, 0.3);
}

/* 座位详情弹窗 */
.seat-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.detail-value.available,
.detail-value.occupied,
.detail-value.booked,
.detail-value.maintenance {
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.detail-value.available {
  background-color: #4CAF50;
}

.detail-value.occupied {
  background-color: #F44336;
}

.detail-value.booked {
  background-color: #FFC107;
}

.detail-value.maintenance {
  background-color: #9E9E9E;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 10rpx;
  padding: 20rpx 0;
  text-align: center;
  font-size: 30rpx;
}

.btn-book {
  background-color: #3A7FED;
  color: #fff;
}

.btn-manage {
  background-color: #FF9800;
  color: #fff;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}