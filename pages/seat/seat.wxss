/* pages/seat/seat.wxss */
/* 页面容器样式 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 筛选栏样式 - 包含搜索框和筛选器 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: transparent;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgb(240, 232, 232);
}

.search-box {
  position: relative;
  flex: 1;
  margin-right: 0rpx;
  display: flex;
  align-items: center;
}

.search-box input {
  background-color:rgb(233, 243, 243);
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  width:100%;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 40rpx;
  position: relative;
}



.filter-options {
  width: 200rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color:rgb(233, 243, 243);
  border-radius: 20rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
}

.down-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}


/* 筛选结果样式 */
.filtered-results {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filtered-results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
  line-height: 40rpx;
}

/* 座位状态区域 - 显示座位状态统计和图例 */
.seat-status-container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}


.seat-status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.seat-status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  height: 40rpx;
  line-height: 40rpx;
}

.seat-legend {
  display: flex;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.legend-color {
  width: 30rpx;
  height: 30rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.legend-color.available {
  background-color: #4CAF50;
}

.legend-color.reserved {
  background-color: #FFC107;
}

.legend-color.occupied {
  background-color: #F44336;
}


/* 座位列表区域 - 显示所有座位信息 */
.seat-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.area-buttons {
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.button-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.button-row .seat-button,
.area-button {
  background-color:white;
  color: #000000;
}

.area-button {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-left: 10rpx;
}

.seat-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.seat-info {
  display: flex;
  align-items: center;
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.seat-type {
  font-size: 28rpx;
  color: #666;
}

.seat-status {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx; /* 可根据需要调整高度 */
}

.seat-status.available {
  background-color: #4CAF50;
}

.seat-status.reserved {
  background-color: #FFC107;
}

.seat-status.occupied {
  background-color: #F44336;
}



.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}



